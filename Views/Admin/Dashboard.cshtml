@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "_AdminLayout"; 
}

<div class="admin-dashboard">
    <h2>Bảng điều khiển</h2>

    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-building"></i>
            </div>
            <div class="stat-info">
                <h3>Dự án</h3>
                <p>@ViewBag.ProjectCount</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-info">
                <h3>Thành viên</h3>
                <p>@ViewBag.TeamMemberCount</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-person"></i>
            </div>
            <div class="stat-info">
                <h3>Người dùng</h3>
                <p>@ViewBag.UserCount</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-envelope"></i>
            </div>
            <div class="stat-info">
                <h3>Liên hệ</h3>
                <p>@ViewBag.ContactCount</p>
            </div>
        </div>
    </div>

    <div class="quick-links">
        <h3>Truy cập nhanh</h3>
        <div class="links-container">
            <a href="@Url.Action("ManageProjects", "Admin")" class="quick-link-card">
                <i class="bi bi-building"></i>
                <span>Quản lý dự án</span>
            </a>

            <a href="@Url.Action("ManageTeamMembers", "Admin")" class="quick-link-card">
                <i class="bi bi-people"></i>
                <span>Quản lý thành viên</span>
            </a>

            <a href="@Url.Action("ManageContacts", "Admin")" class="quick-link-card">
                <i class="bi bi-envelope"></i>
                <span>Quản lý liên hệ</span>
            </a>

            <a href="/" class="quick-link-card">
                <i class="bi bi-house"></i>
                <span>Về trang chủ</span>
            </a>
        </div>
    </div>
</div>

<!-- Style cho Admin Dashboard -->
<style>
    .admin-dashboard {
        padding: 20px;
    }

        .admin-dashboard h2 {
            margin-bottom: 30px;
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
        }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
        display: flex;
        align-items: center;
    }

    .stat-icon {
        font-size: 2rem;
        color: #3498db;
        margin-right: 15px;
        background-color: rgba(52, 152, 219, 0.1);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-info h3 {
        margin: 0;
        color: #777;
        font-size: 1rem;
    }

    .stat-info p {
        margin: 5px 0 0 0;
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
    }

    .quick-links h3 {
        margin-bottom: 20px;
        color: #333;
    }

    .links-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .quick-link-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
        text-align: center;
        text-decoration: none;
        color: #333;
        transition: transform 0.3s;
    }

        .quick-link-card:hover {
            transform: translateY(-5px);
        }

        .quick-link-card i {
            font-size: 2rem;
            color: #3498db;
            margin-bottom: 10px;
            display: block;
        }

        .quick-link-card span {
            font-weight: bold;
        }

    
</style>