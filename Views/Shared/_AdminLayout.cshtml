@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Quản trị BR Architects</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/modal.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="brand-container">
                <a href="/Admin/Dashboard">
                    <b>BR</b> Admin
                </a>
            </div>

            <div class="user-info">
                <p class="user-name">@User.Identity.Name</p>
                <p>Administrator</p>
            </div>

            <ul class="admin-menu">
                <li>
                    <a href="@Url.Action("Dashboard", "Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Bảng điều khiển
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ManageProjects", "Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "ManageProjects" ? "active" : "")">
                        <i class="bi bi-building"></i> Quản lý dự án
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ManageTeamMembers", "Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "ManageTeamMembers" ? "active" : "")">
                        <i class="bi bi-people"></i> Quản lý thành viên
                    </a>
                </li>
                <li>
                    <a href="/">
                        <i class="bi bi-house"></i> Về trang chủ
                    </a>
                </li>
                <li>
                    <a href="#" id="logout-btn">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Nội dung -->
        <div class="content-wrapper">
            <div class="top-bar">
                <button class="mobile-menu-toggle" id="mobile-menu-toggle">
                    <i class="bi bi-list"></i>
                </button>

                <h1>@ViewData["Title"]</h1>

                <div class="top-bar-actions">
                    <a href="/" target="_blank">
                        <i class="bi bi-box-arrow-up-right"></i> Xem trang web
                    </a>
                </div>
            </div>

            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>